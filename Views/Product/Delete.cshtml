@model Product


<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-5 rounded-lg" style="max-width: 600px; width: 100%;">
        <h1 class="text-center text-danger mb-4" style="font-family: 'Inter', sans-serif;">Delete Product</h1>
        <p class="text-center fs-5 mb-4">Are you sure you want to delete the product <strong>@Model.Name</strong>?</p>

        <div class="d-flex justify-content-center gap-3">
            <a class="btn btn-secondary btn-lg rounded-pill mr-2" asp-controller="Product" asp-action="Index">Back to Product Page</a>
            <a class="btn btn-danger btn-lg rounded-pill" asp-controller="Product" asp-action="ConfirmDelete" asp-route-id="@Model.Id">Confirm Delete</a>
        </div>
    </div>
</div>

