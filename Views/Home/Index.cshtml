@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section (No Background Image, Just Simple Text) -->
<section class="hero text-center py-5 mb-5" style="background-color: #f8f9fa;">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3" style="font-family: 'Inter', sans-serif;">Welcome to Product Management</h1>
        <p class="lead fs-4 mb-4" style="font-family: 'Roboto', sans-serif;">Effortlessly manage your products with our easy-to-use CRUD system.</p>
        <a href="/Product" class="btn btn-primary btn-lg rounded-pill mt-3">Get Started</a>
    </div>
</section>

<!-- Main Content: Interactive Sections with Cards -->
<div class="container">
    <div class="row text-center mb-5">
        <!-- Create Product Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-lg rounded-lg border-0">
                <div class="card-body">
                    <h5 class="card-title">Create Product</h5>
                    <p class="card-text">Add new products to your inventory quickly and easily.</p>
                    <a href="/Product/Create" class="btn btn-primary btn-lg rounded-pill">Add New Product</a>
                </div>
            </div>
        </div>

        <!-- Manage Products Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-lg rounded-lg border-0">
                <div class="card-body">
                    <h5 class="card-title">Manage Products</h5>
                    <p class="card-text">Edit, update, or delete your products in a simple interface.</p>
                    <a href="/Product" class="btn btn-primary btn-lg rounded-pill">Manage Products</a>
                </div>
            </div>
        </div>

        <!-- View Reports Card -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-lg rounded-lg border-0">
                <div class="card-body">
                    <h5 class="card-title">View Reports</h5>
                    <p class="card-text">Get detailed insights and analytics about your products.</p>
                    <a href="/Reports" class="btn btn-primary btn-lg rounded-pill">View Reports</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer Section -->
<footer class="bg-dark text-white text-center py-4 mt-5">
    <p>&copy; 2025 Product Management App. All Rights Reserved.</p>
</footer>

@* Include Bootstrap 5 JS *@
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
